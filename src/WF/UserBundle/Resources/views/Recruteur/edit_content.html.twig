{% trans_default_domain 'FOSUserBundle' %}

 <div class="wrapper">
            <!--=== Profile ===-->
            <div class="container content profile">
            	<div class="row">
                    <!--Left Sidebar-->
                    <div class="col-md-3 md-margin-bottom-40">
                        {% if not app.user.path %}
                            {% set imgSrc = '../holder.jpg'%}
                        {% else %}
                            {% set imgSrc = app.user.path %}
                        {% endif %}
                        <img class="img-responsive profile-img margin-bottom-20" src="{{ asset('upload/users/'~ app.user.id ~'/' ~ imgSrc) }}" alt="" width="300">

                        <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                             <li class="list-group-item">
                                <a href="{{path('recruteur_profile_wall')}}"><i class="fa fa-user"></i> Profile</a>
                            </li>
                           {#  <li class="list-group-item ">
                                <a href="{{path('recruteur_profile_users')}}"><i class="fa fa-group"></i> Contacts</a>
                            </li> #}
                            <li class="list-group-item ">
                                <a href="{{path('tests_recruteur')}}"><i class="fa fa-cubes"></i> My Tests</a>
                            </li>
                           
                            <li class="list-group-item active">
                                <a href="{{path('recruteur_profile_edit')}}"><i class="fa fa-cog"></i> Settings</a>
                            </li>
                        </ul>

                        <div class="panel-heading-v2 overflow-h">
                            <h2 class="heading-xs pull-left"><i class="fa fa-bar-chart-o"></i> Task Progress</h2>
                            <a href="#"><i class="fa fa-cog pull-right"></i></a>
                        </div>
                        <h3 class="heading-xs">Web Design <span class="pull-right">92%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs">
                            <div style="width: 92%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="92" role="progressbar" class="progress-bar progress-bar-u">
                            </div>
                        </div>

                        <h3 class="heading-xs">Unify Project <span class="pull-right">85%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs">
                            <div style="width: 85%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="85" role="progressbar" class="progress-bar progress-bar-blue">
                            </div>
                        </div>
                        <h3 class="heading-xs">Sony Corporation <span class="pull-right">64%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs margin-bottom-40">
                            <div style="width: 64%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="64" role="progressbar" class="progress-bar progress-bar-dark">
                            </div>
                        </div>

                        <hr>
                        <div class="margin-bottom-50"></div>

                        <!--Datepicker-->
                        <form action="#" id="sky-form2" class="sky-form">
                            <div id="inline-start"></div>
                        </form>
                        <!--End Datepicker-->
                    </div>
                    <!--End Left Sidebar-->
                    <!-- Profile Content -->
            <div class="col-md-9">
                <div class="profile-body margin-bottom-20">
                    <div class="tab-v1">

                        <ul class="nav nav-justified nav-tabs">
                            <li class="active">
                                <a data-toggle="tab" href="#profile">Edit Profile</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#passwordTab">Change Password</a>
                            </li> 
                        </ul>
                        <div class="tab-content">
                            <div id="profile" class="profile-edit tab-pane fade in active">
                                <h2 class="heading-md">Manage your Name, ID and Email Addresses.</h2>
                                <p>Below are the name and email addresses on file for your account.</p>
                                <br>

                                <form action="{{ path('fos_user_profile_edit') }}" id="ProfileFormTest" class="sky-form"{{ form_enctype(form) }} method="POST">
                                    <dl class="dl-horizontal">
                                       
                                        <dt><strong>Your Username </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append icon-user"></i>
                                                    {{ form_row(form._token) }}
                                                    {{ form_widget(form.username, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.username) }}
                                                </label>
                                            </section>
                                        </dd>
                                        <dt><strong>Your Name </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append icon-user"></i>
                                                    {{ form_row(form._token) }}
                                                    {{ form_widget(form.prenom, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.prenom) }}
                                                </label>
                                            </section>
                                        </dd>
                                        <dt><strong>Your Last Name </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append icon-user"></i>
                                                    {{ form_row(form._token) }}
                                                    {{ form_widget(form.nom, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.nom) }}
                                                </label>
                                            </section>
                                        </dd>

                                        <hr>
                                        <dt><strong>Picture </strong></dt>
                                        <dd>                                          
                                        <section>
                                            <label for="file" class="input input-file">
                                                    <div class="button">
                                                        {{ form_widget(form.file, {'attr': {'class': 'sky-form','onchange':'this.parentNode.nextElementSibling.value = this.value'}}) }}
                                                        {{ form_errors(form.file) }}
                                                        Browse
                                                    </div>
                                                    <input type="text" placeholder="Include some files" readonly>
                                            </label> 
                                        </section>
                                        </dd>

                                        <hr>
                                        <dt><strong>Your Address </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-location-arrow"></i>
                                                    {{ form_row(form._token) }}
                                                    {{ form_widget(form.adresse, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.adresse) }}
                                                </label>
                                            </section>    
                                        </dd>

                                        <hr>
                                        <dt><strong>Your Company </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-location-arrow"></i>
                                                    {{ form_row(form._token) }}
                                                    {{ form_widget(form.nomSoci, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.nomSoci) }}
                                                </label>
                                            </section>    
                                        </dd>

                                        <hr>
                                          <dt><strong>Your Birthday date </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-calendar"></i>
                                                    {{ form_widget(form.dateNaiss, {'attr': {'class': 'sky-form hasDatepicker '}}) }}
                                                    {{ form_errors(form.dateNaiss) }}
                                                </label>
                                            </section> 
                                        </dd>

                                        <hr>
                                        <dt><strong>Primary Email Address </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-envelope-o" ></i>
                                                    {{ form_widget(form.email, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.email) }}
                                                </label>
                                            </section>                                          
                                        </dd>

                                        <hr>
                                        <dt><strong>Confirm your current password to submit  </strong></dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-lock" ></i>
                                                    {{ form_widget(form.current_password, {'attr': {'class': 'sky-form'}}) }}
                                                    {{ form_errors(form.current_password) }}
                                                </label>
                                            </section>
                                        </dd>

                                        
                                        
                                        {{ form_widget(form._token) }}
                                        <hr>
                                    </dl>

                                    <button type="reset" class="btn-u btn-u-default">Cancel</button>
                                    <button type="submit" class="btn-u">Save Changes</button>
                                <form>
                                    <script>
                                        $("#ProfileFormTest").validate();
                                    </script>
                            </div>

                            <div id="passwordTab" class="profile-edit tab-pane fade">
                                <h2 class="heading-md">Manage your Security Settings</h2>
                                <p>Change your password.</p>
                                <br>
                                <form action="{{ path('fos_user_change_password') }}"  class="sky-form" {{ form_enctype(form) }} method="POST">
                                    {{ form_row(form._token) }}

                                    <dl class="dl-horizontal">
                                        <div class="row">
                                            <dt>Enter your password</dt>
                                            <section class="col col-6">
                                                <label class="text">
                                                    <i class="icon-append fa fa-lock"></i>
                                                    <input type="password" class="sky-form"  name="_password" placeholder="Password">
                                                </label>
                                            </section>
                                            <dt>Confirm Password</dt>
                                            <section class="col col-6">
                                                <label class="text">
                                                    <i class="icon-append fa fa-lock"></i>
                                                    <input type="password" class="sky-form" name="_passwordConfirm" placeholder="Confirm password">
                                                </label>
                                            </section>
                                        </div>
                                        <hr>
                                    </dl>
                                    <label class="toggle toggle-change"><input type="checkbox" checked="" name="checkbox-toggle-1"><i class="no-rounded"></i>Remember password</label>
                                    <br>
                                     {{ form_widget(form._token) }}
                                    
                                    <button type="reset" class="btn-u btn-u-default">Cancel</button>
                                    <button class="btn-u" type="submit">Save Changes</button>
                                
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- End Profile Content -->
                </div>
            </div><!--/container-->
            <!--=== End Profile ===-->
        </div><!--/wrapper-->

       