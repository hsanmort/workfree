{% extends "WFUserBundle::layoutProfile.html.twig" %}
    
    {% block fos_user_content %}
        <div class="wrapper">
            <!--=== Profile ===-->
            <div class="container content profile">
            	<div class="row">
                    <!--Left Sidebar-->
                    <div class="col-md-3 md-margin-bottom-40">
                        {% if not app.user.path %}
                            {% set imgSrc = '../holder.jpg'%}
                        {% else %}
                            {% set imgSrc = app.user.path %}
                        {% endif %}
                        <img class="img-responsive profile-img margin-bottom-20" src="{{ asset('upload/users/'~ app.user.id ~'/' ~ imgSrc) }}" alt="" width="300">

                        <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                            
                            <li class="list-group-item active">
                                <a href="{{path('freelancer_profile_wall')}}"><i class="fa fa-user"></i> Profile</a>
                            </li>
                           {#  <li class="list-group-item ">
                                <a href="{{path('freelancer_profile_users')}}"><i class="fa fa-group"></i> Contacts</a>
                            </li> #}
                            <li class="list-group-item ">
                                <a href="{{path('freelancer_profile_projects')}}"><i class="fa fa-cubes"></i> My Projects</a>
                            </li>
                            <li class="list-group-item ">
                                <a href="{{path('tests_freelancer')}}"><i class="fa fa-cubes"></i> My Tests</a>
                            </li>
                           
                            <li class="list-group-item ">
                                <a href="{{path('freelancer_profile_edit')}}"><i class="fa fa-cog"></i> Settings</a>
                            </li>
                        </ul>

                        <div class="panel-heading-v2 overflow-h">
                            <h2 class="heading-xs pull-left"><i class="fa fa-bar-chart-o"></i> Task Progress</h2>
                            <a href="#"><i class="fa fa-cog pull-right"></i></a>
                        </div>
                        <h3 class="heading-xs">Web Design <span class="pull-right">92%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs">
                            <div style="width: 92%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="92" role="progressbar" class="progress-bar progress-bar-u">
                            </div>
                        </div>

                        <h3 class="heading-xs">Unify Project <span class="pull-right">85%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs">
                            <div style="width: 85%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="85" role="progressbar" class="progress-bar progress-bar-blue">
                            </div>
                        </div>
                        <h3 class="heading-xs">Sony Corporation <span class="pull-right">64%</span>
                        </h3>
                        <div class="progress progress-u progress-xxs margin-bottom-40">
                            <div style="width: 64%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="64" role="progressbar" class="progress-bar progress-bar-dark">
                            </div>
                        </div>

                        <hr>
                        <div class="margin-bottom-50"></div>

                        <!--Datepicker-->
                        <form action="#" id="sky-form2" class="sky-form">
                            <div id="inline-start"></div>
                        </form>
                        <!--End Datepicker-->
                    </div>
                    <!--End Left Sidebar-->
                     <!-- Profile Content -->
            <div class="col-md-9">
                <div class="profile-body">
                    <div class="profile-bio">
                        <div class="row">
                            <div class="col-md-5">
                                <a class="btn-u btn-u-sm" href="#">Change Picture</a>
                                <img  class="img-responsive profile-img margin-bottom-20" src="{{ asset('upload/users/'~ app.user.id ~'/' ~ imgSrc) }}" width="220" alt="">
                                
                            </div>
                            <div class="col-md-7">
                                <h2>{{app.user.nom}} {{app.user.prenom}}</h2>
                                <span><strong>Birthday:</strong> {{app.user.dateNaiss|date()}} </span> 
                                <span><strong>Position:</strong> {{app.user.adresse}}</span>
                                <hr>
                                <p>{{app.user.resume}}</p>
                            </div>
                        </div>
                    </div><!--/end row-->

                    <hr>

                    <div class="row">
                        <!--Social Icons v3-->
                        <div class="col-sm-6 sm-margin-bottom-30">
                            <div class="panel panel-profile">
                                <div class="panel-heading overflow-h">
                                    <h2 class="panel-title heading-sm pull-left"><i class="fa fa-pencil"></i> Social Contacts <small>(option 1)</small></h2>
                                    <a href="#"><i class="fa fa-cog pull-right"></i></a>
                                </div>
                                <div class="panel-body">
                                     <ul class="list-unstyled social-contacts-v2">
                                        <li><i class="rounded-x tw fa fa-twitter"></i> <a href="#">{{app.user.nom}}.{{app.user.prenom}}</a></li>
                                        <li><i class="rounded-x fb fa fa-facebook"></i> <a href="#">{{app.user.nom}} {{app.user.prenom}}</a></li>
                                        <li><i class="rounded-x gm fa fa-envelope"></i> <a href="#">{{app.user.email}}</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!--End Social Icons v3-->

                      
                    </div><!--/end row-->

                    <hr>

                    <!--Timeline-->
                                  
                    <div class="panel panel-profile">
                        <div class="panel-heading overflow-h">
                            <h2 class="panel-title heading-sm pull-left"><i class="fa fa-briefcase"></i> Experience</h2>
                            <a href="#"><i class="fa fa-cog pull-right"></i></a>
                        </div>
                        {% for exp in user.experiences %}
                        <div class="panel-body margin-bottom-40">
                            <ul class="timeline-v2 timeline-me">
                                <li>
                                    <time datetime="" class="cbp_tmtime"><span>{{exp.titreExp}}</span> <span>{{exp.dateExp|date()}}</span></time>
                                    <i class="cbp_tmicon rounded-x hidden-xs"></i>
                                    <div class="cbp_tmlabel">
                                        <p>{{exp.descriptionExp}}</p>
                                    </div>
                                </li>
                                
                            </ul>
                        </div>
                    {% endfor %}
                    </div>
                    <!--End Timeline-->

                    <!--Timeline-->
                    <div class="panel panel-profile">
                        <div class="panel-heading overflow-h">
                            <h2 class="panel-title heading-sm pull-left"><i class="fa fa-mortar-board"></i> Education</h2>
                            <a href="#"><i class="fa fa-cog pull-right"></i></a>
                        </div>
                        
                        {% for frm in user.formations %}

                        <div class="panel-body">
                            <ul class="timeline-v2 timeline-me">
                                <li>
                                    <time datetime="" class="cbp_tmtime"><span>{{frm.titreFormation}}</span> <span>{{frm.dateFormation|date()}}</span></time>
                                    <i class="cbp_tmicon rounded-x hidden-xs"></i>
                                    <div class="cbp_tmlabel">
                                        
                                        <p>{{frm.descriptionFormation}}</p>
                                    </div>
                                </li>
                                
                            </ul>
                        </div>
                    {% endfor %}
                    </div>
                    <!--End Timeline-->

                    <hr>

                    <div class="row">
                        <!--Social Contacts v2-->
                        
                        <!--End Social Contacts v2-->

                        <!--Design Skills-->
                        <div class="col-sm-6">
                            <div class="panel panel-profile">
                                <div class="panel-heading overflow-h">
                                    <h2 class="panel-title heading-sm pull-left"><i class="fa fa-pencil"></i> Language Skills</h2>
                                    <a href="#"><i class="fa fa-cog pull-right"></i></a>
                                </div>
                                <div class="panel-body">
                                    <div class="row">
                                         <div class="p-chart col-sm-6 col-xs-6 sm-margin-bottom-10">
                                            <div class="circle margin-bottom-20" id="circle-4"></div>
                                            <h3 class="heading-xs">Engagement Score</h3>
                                            <p>Celery coriander bitterleaf epazote radicchio shallot.</p>
                                        </div>
                                        <div class="p-chart col-sm-6 col-xs-6">
                                            <div class="circle margin-bottom-20" id="circle-5"></div>
                                            <h3 class="heading-xs">Progfile Completness</h3>
                                            <p>Celery coriander bitterleaf epazote radicchio shallot.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Design Skills-->
                    </div><!--/end row-->
                </div>
            </div>
            <!-- End Profile Content -->
                </div>
            </div><!--/container-->
            <!--=== End Profile ===-->
        </div><!--/wrapper-->
    {% endblock fos_user_content %}